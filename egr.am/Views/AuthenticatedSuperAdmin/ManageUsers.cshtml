@using egr.am.Constants;
@model IEnumerable<egr.am.models.AuthenticatedSuperUserModel>
    @{
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>@AuthenticatedSuperAdminControllerAction.friendlyName</h2>

    <p>
        @Html.ActionLink("Create New", "Create",null,  new { @class = ClassStyle.Buttons.Add })
    </p>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetRole.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetRole.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit",  new { id = item.Id }, new { @class = ClassStyle.Buttons.Edit } ) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = ClassStyle.Buttons.Details })  |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = ClassStyle.Buttons.Delete })
                </td>
            </tr>
            }
        </tbody>
    </table>

